    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug API Test",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "test"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "cwd": "${workspaceFolder}/api-test"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'sar-blog'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=sar-blog",
                    "--package=sar-blog"
                ],
                "filter": {
                    "name": "sar-blog",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'sar-blog'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=sar-blog",
                    "--package=sar-blog"
                ],
                "filter": {
                    "name": "sar-blog",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}